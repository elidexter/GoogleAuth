@page
@model GoogleAuther.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div class="row">
    <div class="col-6">
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="text-dark"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="text-dark"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <button type="submit" class="btn btn-info">Ingresar</button>
            </div>            
        </form>
    </div>
    <div class="col-6">
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
            <div>
                <p>
                    <button type="submit" class="btn btn-dark" name="provider" value="Google" title="Log in using your Google account">Google</button>
                </p>
            </div>
        </form>
    </div>
</div>
